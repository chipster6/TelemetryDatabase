# SECURITY CONFIGURATION TEMPLATE
# Copy this file to .env and update with secure production values

# PRIMARY DATA STORE (REQUIRED)
WEAVIATE_URL=https://your-cluster.weaviate.network
WEAVIATE_API_KEY=your_weaviate_api_key

# SECONDARY (Auth only)
DATABASE_URL=postgresql://username:password@localhost:5432/ai_biometric_platform

# Application Configuration
NODE_ENV=development
PORT=5000

# CRITICAL SECURITY SETTINGS - MUST BE CHANGED IN PRODUCTION
SESSION_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_64_CHARS_MINIMUM
ENCRYPTION_KEY=CHANGE_THIS_32_CHARACTER_ENCRYPTION_KEY

# CORS Security - Specify allowed origins in production
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Post-Quantum Cryptography Settings
REAL_CRYSTALS_KYBER_ENABLED=true
QUANTUM_RESISTANT_ENCRYPTION=true

# Admin User Setup (for initial setup only - CHANGE THESE)
PROMPT_USERNAME=admin
PROMPT_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_NOW

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Security
SESSION_MAX_AGE=1800000
SESSION_SECURE=true

# GDPR Compliance Settings
DATA_RETENTION_DAYS=30
GDPR_COMPLIANCE_MODE=true

# WebAuthn Configuration
WEBAUTHN_RP_ID=yourdomain.com
WEBAUTHN_RP_NAME="TelemetryDatabase"
WEBAUTHN_ORIGIN=https://yourdomain.com

# Security Monitoring
AUDIT_LOG_ENABLED=true
LOG_LEVEL=info

# Development Settings (DISABLE IN PRODUCTION)
DEBUG_MODE=false
ENABLE_SWAGGER=false