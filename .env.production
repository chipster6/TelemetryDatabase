# Production Environment Configuration
# ⚠️ NEVER commit this file to version control
# ⚠️ All secrets must be properly configured before deployment

# Node Environment
NODE_ENV=production

# Weaviate Configuration (Production Instance)
WEAVIATE_URL=your-production-weaviate-url.weaviate.cloud
WEAVIATE_API_KEY=your-production-weaviate-api-key
WEAVIATE_CLASS_NAME=TelemetryData

# Database Configuration (if using PostgreSQL alongside Weaviate)
DATABASE_URL=postgresql://user:password@host:port/database
DB_POOL_SIZE=20
DB_TIMEOUT=30000

# Redis Configuration (Production - use Redis Cloud or AWS ElastiCache)
REDIS_URL=redis://your-production-redis-host:6379

# Security Configuration
SESSION_SECRET=REQUIRED-GENERATE-STRONG-64-CHAR-SECRET
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
BCRYPT_ROUNDS=14

# WebAuthn Configuration (Production Domain)
WEBAUTHN_RP_ID=yourdomain.com
WEBAUTHN_ORIGIN=https://yourdomain.com

# Biometric Configuration
BIOMETRIC_SESSION_TIMEOUT=1800
BIOMETRIC_MAX_SESSIONS=2
BIOMETRIC_RETENTION_DAYS=90

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_STRUCTURED_LOGGING=true
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Rate Limiting (Production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50
RATE_LIMIT_API_MAX_REQUESTS=25

# SSL/TLS Configuration
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# Performance Configuration
ENABLE_COMPRESSION=true
CACHE_MAX_AGE=3600

# Admin Configuration (Use OAuth in production instead of basic auth)
ADMIN_OAUTH_CLIENT_ID=your-oauth-client-id
ADMIN_OAUTH_CLIENT_SECRET=your-oauth-client-secret