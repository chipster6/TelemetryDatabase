# Local Development Environment Variables
# Copy this file to .env.local and fill in your actual values

# Database (for local development - production uses Cloudflare D1)
DATABASE_URL="file:./local.db"

# Session Security
SESSION_SECRET="your-super-secret-session-key-here"

# Admin Credentials
PROMPT_USERNAME="admin"
PROMPT_PASSWORD="your-secure-admin-password"

# Weaviate Vector Database
WEAVIATE_URL="https://your-cluster.weaviate.network"
WEAVIATE_API_KEY="your-weaviate-api-key"

# REAL CRYSTALS-Kyber Post-Quantum Encryption
REAL_CRYSTALS_KYBER_ENABLED="true"
QUANTUM_RESISTANT_ENCRYPTION="true"
NODE_ENV="development"

# Optional: Additional security settings
BIOMETRIC_ENCRYPTION_LEVEL="maximum"
GDPR_COMPLIANCE_MODE="strict"