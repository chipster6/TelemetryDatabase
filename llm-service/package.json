{
  "name": "llm-service",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development tsx src/index.ts",
    "build": "tsc && esbuild src/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "NODE_ENV=production node dist/index.js",
    "test": "jest",
    "test:security": "jest tests/security/",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "get-ollama-cert": "node scripts/get-ollama-cert.js",
    "security:scan": "scripts/security-scan.sh scan",
    "security:dockerfile": "scripts/security-scan.sh dockerfile", 
    "security:npm": "scripts/security-scan.sh npm",
    "security:secrets": "scripts/security-scan.sh secrets",
    "audit": "npm audit --audit-level=high",
    "audit:fix": "npm audit fix --audit-level=high",
    "docker:build:secure": "docker build -f Dockerfile.secure -t telemetry-llm-service:secure .",
    "docker:run:secure": "docker-compose -f docker-compose.security.yml up -d",
    "docker:stop:secure": "docker-compose -f docker-compose.security.yml down"
  },
  "dependencies": {
    "express": "^4.21.2",
    "ws": "^8.18.0",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "compression": "^1.8.0",
    "express-rate-limit": "^7.5.1",
    "winston": "^3.17.0",
    "uuid": "^10.0.0",
    "zod": "^3.24.2",
    "ollama": "^0.5.8",
    "rate-limiter-flexible": "^5.0.3",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.13",
    "@types/cors": "^2.8.19",
    "@types/compression": "^1.8.1",
    "@types/node": "^20.16.11",
    "@types/uuid": "^10.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.6.3",
    "tsx": "^4.19.1",
    "esbuild": "^0.25.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5"
  }
}